
@{
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SubjectAndClassManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SubjectAndClassManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />p
</head>
<body>
    <main class="d-flex">
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white sidebar ">
            <div class="text-center text-uppercase fs-4 fw-bold sidebar-heading pt-5 border-bottom">
                <i class="fa-solid fa-school-flag me-2 "></i>Udemy
            </div>

            <ul class="nav nav-pills flex-column mb-auto ">
                @if (User.IsInRole("admin"))
                {
                    <li class="nav-item mt-3">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Subjects" asp-action="Index">Subjects</a>
                    </li>
                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Rooms" asp-action="Index">Rooms</a>

                    </li>
                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Teachers" asp-action="Index">Teachers</a>

                    </li>

                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Students" asp-action="Index">Students</a>

                    </li>

                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Classes" asp-action="Index">Classes</a>

                    </li>

                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="TuitionPayments" asp-action="Index">Tuition Payments</a>

                    </li>

                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="StudentRegistrations" asp-action="Index">Student Registration</a>

                    </li>

                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Notification" asp-action="Manage">Notification</a>

                    </li>

                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Users" asp-action="Index">Users</a>

                    </li>

                }

                @if (User.IsInRole("student"))
                {
                    <li class="nav-item mt-3">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Classes" asp-action="Index">
                            <i class="fa-solid fa-calendar me-3"></i>Schedule
                        </a>
                    </li>
                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Notification" asp-action="Index">
                            <i class="fa-solid fa-bell me-3"></i>Notify
                        </a>

                    </li>
                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="StuGrade" asp-action="Index">
                            <i class="fa-solid fa-book-open me-3"></i>Grade
                        </a>

                    </li>

                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Students" asp-action="Index">
                            <i class="fa-solid fa-gear me-3"></i>Setting and profile
                        </a>

                    </li>
                }
                @if (User.IsInRole("teacher"))
                {
                    <li class="nav-item mt-3">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Classes" asp-action="Index">
                            <i class="fa-solid fa-calendar me-3"></i>Schedule
                        </a>
                    </li>
                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Notification" asp-action="Index">
                            <i class="fa-solid fa-bell me-3"></i>Notify
                        </a>

                    </li>
                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="TeachGrade" asp-action="Index">
                            <i class="fa-solid fa-book-open me-3"></i>Grade
                        </a>

                    </li>
                    <li class="nav-item mt-2">
                        <a class="text-decoration-none text-light" asp-area="" asp-controller="Teachers" asp-action="Index">
                            <i class="fa-solid fa-gear me-3"></i>Setting and profile
                        </a>

                    </li>
                }

            </ul>
        </div>

        <div class="content container-fluid">
            <div class="head mb-5">
                <div class="dropdown show float-end">
                    <a class="btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Nguyễn Dương Viết Dũng
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        @if (User.IsInRole("student"))
                        {
                            <a class="dropdown-item" asp-area="" asp-controller="StuInfo" asp-action="Index">Information</a>
                        }
                        @if (User.IsInRole("teacher"))
                        {
                            <a class="dropdown-item" asp-area="" asp-controller="TeachInfo" asp-action="Index">Information</a>
                        }

                        <a class="dropdown-item" asp-area="" asp-controller="Notification" asp-action="Index">Notify</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-area="" asp-controller="Dashboard" asp-action="Logout">Logout</a>
                    </div>
                </div>
            </div>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        
    </main>
    



    

   

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
