@model SubjectAndClassManagement.Models.Teacher

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="teacher_id" />

            <div class="form-group">
                <label asp-for="teacher_name" class="control-label"></label>
                <input asp-for="teacher_name" class="form-control" />
                <span asp-validation-for="teacher_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone_number" class="control-label"></label>
                <input asp-for="phone_number" class="form-control" />
                <span asp-validation-for="phone_number" class="text-danger"></span>
            </div>

            @* Display and Edit Profile Information through User Relationship *@
            <input type="hidden" asp-for="User.password" />
            <input type="hidden" asp-for="User.username" />
            <input type="hidden" asp-for="User.user_type" />
            <input type="hidden" asp-for="User.student_id" />
            <input type="hidden" asp-for="User.teacher_id" />
            <input type="hidden" asp-for="User.Profile.profile_id" />
            <input type="hidden" asp-for="User.Profile.username" />
            <div class="form-group">
                <label asp-for="User.Profile.date_of_birth" class="control-label"></label>
                <input asp-for="User.Profile.date_of_birth" class="form-control" />
                <span asp-validation-for="User.Profile.date_of_birth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Profile.gender" class="control-label"></label>
                <input asp-for="User.Profile.gender" class="form-control" />
                <span asp-validation-for="User.Profile.gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Profile.address" class="control-label"></label>
                <input asp-for="User.Profile.address" class="form-control" />
                <span asp-validation-for="User.Profile.address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Profile.citizen_id_card" class="control-label"></label>
                <input asp-for="User.Profile.citizen_id_card" class="form-control" />
                <span asp-validation-for="User.Profile.citizen_id_card" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

