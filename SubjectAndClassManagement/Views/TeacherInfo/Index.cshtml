@page
@model SubjectAndClassManagement.Views.TeacherInfo.IndexModel
@{
}


<h1>Personal Information</h1>

<section class="container">

    <form class="row g-3">

        <div class="col-4">
            <label for="inputName" class="form-label">Teacher ID</label>
            <input type="text" class="form-control" id="inputID" readonly>
        </div>
        <div class="col-8">
            <label for="inputName" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="inputAddress" readonly>
        </div>
        <div class="col-md-6">
            <label for="inputEmail4" class="form-label">Email</label>
            <input type="email" class="form-control" id="inputEmail4" readonly>
        </div>
        <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Phone number</label>
            <input type="text" class="form-control" id="inputPhone4" readonly>
        </div>

        <div class="col-md-2">
            <label for="inputGender" class="form-label">Gender</label>
            <select id="inputGender" class="form-select">
                <option>Male</option>
                <option>Female</option>
            </select>
        </div>

        <div class="col-10">
            <label for="inputAddress2" class="form-label">Address</label>
            <input type="text" class="form-control" id="inputAddress2" readonly>
        </div>

        <div class="col-2">
            <button class="p-2" asp-area="" asp-controller="UpdateTeachInfo" asp-action="Index">Update information</button>
        </div>

        <div class="col-2">
            <button class="p-2" asp-area="" asp-controller="UpdatePass" asp-action="Index">Update password</button>
        </div>


    </form>



</section>