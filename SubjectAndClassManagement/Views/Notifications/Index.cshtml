@model IEnumerable<SubjectAndClassManagement.Models.Notification>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.notify_header)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notify_day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notify_description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.notify_header)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notify_day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notify_description)
            </td>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.notify_id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.notify_id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.notify_id">Delete</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.notify_id">Details</a> |
                    </td>
                }

        </tr>
}
    </tbody>
</table>
