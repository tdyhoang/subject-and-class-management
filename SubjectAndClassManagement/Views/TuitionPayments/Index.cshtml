@model IEnumerable<SubjectAndClassManagement.Models.TuitionPayment>

@{
    ViewData["Title"] = "Index";
}



<!DOCTYPE html>
<html>
<head>
    <title>Student</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-offset-1 col-md-10">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-sm-3">
                                <h4 class="title">Tuition payment</h4>
                            </div>
                            <div class="col-sm-9 text-right">
                                <div class="btn_group" style="width: 1300px">
                                    <input type="text" class="form-control" placeholder="Search">
                                    <a asp-action="Create">
                                        <button class="btn" type="button" style="height: 40px; width: 150px">Create New</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.total_credits)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.tuition_fee)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.amount_to_pay)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.amount_paid)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.payment_time)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.excess_money)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.debt)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Student)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.total_credits)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tuition_fee)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.amount_to_pay)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.amount_paid)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.payment_time)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.excess_money)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.debt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Student.student_id)
                                        </td>
                                        <td>
                                            <ul class="action-list">
                                                <li><a asp-action="Edit" asp-route-id="@item.payment_id" data-tip="edit"><i class="fa fa-edit"></i></a></li>
                                                <li><a asp-action="Delete" asp-route-id="@item.payment_id" data-tip="delete"><i class="fa fa-trash"></i></a></li>
                                            </ul>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>

