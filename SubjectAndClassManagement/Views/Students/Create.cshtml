@model SubjectAndClassManagement.Models.Student

@{
	ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>
<head>
	<title>Subject</title>
	<link rel="stylesheet" href="~/css/Create.css" />
</head>
<body>
	<div class="container">
		<div class="main-body">
			<div class="row">
				<div class="col mx-auto col-6">
					<div class="card">
						<form asp-action="Create">
							<div class="card-body">
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Student ID</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="student_id" class="form-control" />
									</div>
									<span asp-validation-for="student_id" class="text-danger"></span>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Student name</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="student_name" class="form-control" />
									</div>
									<span asp-validation-for="student_name" class="text-danger"></span>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Email</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="email" class="form-control" />
									</div>
									<span asp-validation-for="email" class="text-danger"></span>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Phone number</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="phone_number" class="form-control" />
									</div>
									<span asp-validation-for="phone_number" class="text-danger"></span>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Academic year</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="academic_year" class="form-control" value="2023" />
									</div>
									<span asp-validation-for="academic_year" class="text-danger"></span>
								</div>
								<div class="row">
									<div class="col-sm-4"></div>
									<div class="col-sm-4 text-secondary">
										<a asp-action="Index">Back to List</a>
									</div>
									<div class="col-sm-4 text-secondary">
										<input type="submit" value="Create" class="btn btn-primary" />
									</div>
								</div>
							</div>
						</form>

					</div>

				</div>
			</div>
		</div>
	</div>
	@section Scripts {
		@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial");
		}
	}
</body>
</html>