@model IEnumerable<SubjectAndClassManagement.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.user_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.student_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.teacher_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.user_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.user_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.user_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
