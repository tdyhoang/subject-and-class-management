@using (Html.BeginForm("Index", "StuGrade", new { classId = ViewBag.ClassId }, FormMethod.Post))
{
    <div class="form-group">
        <label>Select Class:</label>
        <select class="form-control" name="classId" required>
            <option value="">-- Select Class --</option>
            @foreach (var classItem in ViewBag.Classes)
            {
                <option value="@classItem.class_id">@classItem.class_id</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Show Students</button>
}


@if (Model != null)
{
    <h3>Students in Class @ViewBag.ClassId:</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Grade</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.student_id</td>
                    <td>@student.student_name</td>
                    <td>
                        <form asp-controller="Grade" asp-action="UpdateGrade" method="post">
                            <input type="hidden" name="studentId" value="@student.student_id" />
                            <input type="hidden" name="classId" value="@ViewBag.ClassId" />
                            <input type="number" name="grade" step="0.1" value="0" required />
                            <button type="submit" class="btn btn-primary">Update Grade</button>
                        </form>
                    </td>
                    <td>
                        <!-- Add any other actions you need for each student -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
