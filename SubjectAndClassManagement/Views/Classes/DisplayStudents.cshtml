@model IEnumerable<SubjectAndClassManagement.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h2>@ViewData["ClassName"]</h2>

@{
    var classId = TempData["ClassId"];
}


<link rel="stylesheet" href="~/css/StyleSheet.css" />

<div class="container">
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-sm-3">
                            <h4 class="title">Subject Management</h4>
                        </div>
                        <div class="col-sm-9 text-right">
                            <div class="btn_group ml-auto">
                                <div class="btn_group ml-auto">
                                    <input type="text" class="form-control" placeholder="Search">
                                    <!-- import -->
                                    <form asp-action="ImportFromExcel" method="post" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label for="fileUpload">Import Students:</label>
                                            <input type="file" id="fileUpload" name="file" class="form-control-file" />
                                        </div>
                                        <button type="submit" class="btn btn-success">Import</button>
                                    </form>

                                    <!-- export -->
                                    <a class="btn btn-primary" asp-action="ExportToExcel">Export to Excel</a>

                                    <a asp-controller="StuGrade" asp-action="EditResults" asp-route-id='@classId'>
                                        <button class="btn btn-primary" type="button" style="height: 40px;">ManageResult</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.student_name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.phone_number)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.student_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.phone_number)
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    
