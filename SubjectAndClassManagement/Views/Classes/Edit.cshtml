<!DOCTYPE html>
<html>
<head>
	<title>Subject</title>
	<link rel="stylesheet" href="~/css/Create.css" />
</head>
<body>
	<div class="container">
		<div class="main-body">
			<div class="row">
				<div class="col mx-auto col-6">
					<div class="card">
						<form asp-action="Edit">
							<div class="card-body">
								<div class="row mb-3">
									<h3>Change infomation</h3>
								</div>
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<input type="hidden" asp-for="class_id" />
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Subject ID</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="subject_id" class="form-control" />
									</div>
									<span asp-validation-for="subject_id" class="text-danger"></span>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Room ID</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="room_id" class="form-control" />
									</div>
									<span asp-validation-for="room_id" class="text-danger"></span>
								</div>
								<div class="row mb-3">
									<div class="col-sm-3">
										<h6 class="mb-0">Teacher ID</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										<input asp-for="teacher_id" class="form-control" />
									</div>
									<span asp-validation-for="teacher_id" class="text-danger"></span>
								</div>
