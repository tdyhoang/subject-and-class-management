@model SubjectAndClassManagement.Models.LoginViewModel

@{
    Layout = "_LayoutLogin";
}

<!DOCTYPE html>
<html>
<head>
    <title>Password</title>
</head>
<body>

    <h2><strong>@TempData["Message"]</strong></h2>
    @using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
    {

        <div class="mx-auto" style="width: 500px; margin-top: 120px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h2 class="mx-auto m-5" style="width: 550px;">  Udemy school, choose your password</h2>
            <div style="margin-top: 100px; margin-left: 40px">
                <p class="text-muted mx-auto" style="width: 150px;"> Choose a password</p>

                <div class="mx-auto m-2" style="width: 250px;">
                    <input asp-for="Username" class="form-control" type="password" placeholder="Password" style="  height: 30px; font-size: 13px;" />
                </div>
                <div class="mx-auto m-2" style="width: 250px;">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Confirm" style="height: 30px; font-size: 13px;" />
                </div>

                <div class="mx-auto" style="width: 250px;">
                    <button type="button" class="btn btn-primary btn-sm " style=" height: 30px; width: 250px; font-size: 13px;">
                        Sign up
                    </button>
                </div>
                <div class="mx-auto" style="width: 200px; font-size: 13px; margin-top: 50px">
                    <p>Already have an account?  <a href="@Url.Action("Register", "Accounts")">Sign in</a></p>
                </div>
            </div>

        </div>
    }

    @if (!string.IsNullOrEmpty(ViewData["Error"] as string))
    {
        <p style="color:red;">@ViewData["Error"]</p>
    }



</body>
</html>
